{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/LayoutConfig",
  "definitions": {
    "LayoutConfig": {
      "type": "object",
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ComponentConfig"
          }
        }
      },
      "required": [
        "components"
      ],
      "additionalProperties": false
    },
    "ComponentConfig": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Input",
            "Button",
            "Headline",
            "Textarea",
            "FlexLayout",
            "CardLayout",
            "Code",
            "Image",
            "Text",
            "LabeledText",
            "List",
            "Link",
            "ConcatText",
            "Form",
            "GridLayout"
          ]
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/InputProperties"
            },
            {
              "$ref": "#/definitions/ButtonProperties"
            },
            {
              "$ref": "#/definitions/HeadlineProperties"
            },
            {
              "$ref": "#/definitions/TextareaProperties"
            },
            {
              "$ref": "#/definitions/FlexLayoutProperties"
            },
            {
              "$ref": "#/definitions/CardLayoutProperties"
            },
            {
              "$ref": "#/definitions/CodeProperties"
            },
            {
              "$ref": "#/definitions/ImageProperties"
            },
            {
              "$ref": "#/definitions/TextProperties"
            },
            {
              "$ref": "#/definitions/LabeledTextProperties"
            },
            {
              "$ref": "#/definitions/ListProperties"
            },
            {
              "$ref": "#/definitions/LinkProperties"
            },
            {
              "$ref": "#/definitions/ConcatTextProperties"
            },
            {
              "$ref": "#/definitions/FormProperties"
            },
            {
              "$ref": "#/definitions/GridLayoutProperties"
            }
          ]
        }
      },
      "required": [
        "type",
        "properties"
      ],
      "additionalProperties": false,
      "description": "CONFIGS (the actual components)"
    },
    "InputProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "input"
        },
        "fieldName": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "placeholder": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "text",
            "password",
            "number"
          ]
        }
      },
      "required": [
        "id",
        "fieldName",
        "label"
      ],
      "additionalProperties": false
    },
    "ButtonProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "button"
        },
        "fieldName": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "const": "submit"
        },
        "format": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "UPPERCASE",
              "LOWERCASE",
              "CAPITALIZE",
              "REMOVE_UNDERSCORES"
            ]
          }
        }
      },
      "required": [
        "id"
      ],
      "additionalProperties": false
    },
    "HeadlineProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "headline"
        },
        "fieldName": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "level": {
          "type": "number",
          "enum": [
            1,
            2,
            3,
            4,
            5,
            6
          ]
        }
      },
      "required": [
        "id",
        "level"
      ],
      "additionalProperties": false,
      "description": "TEXT"
    },
    "TextareaProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "textarea"
        },
        "fieldName": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "placeholder": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "fieldName",
        "label"
      ],
      "additionalProperties": false
    },
    "CodeProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "code"
        },
        "fieldName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "const": "json"
        }
      },
      "required": [
        "id",
        "fieldName"
      ],
      "additionalProperties": false
    },
    "FlexLayoutProperties": {
      "type": "object",
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ComponentConfig"
          }
        },
        "id": {
          "type": "string",
          "const": "flexLayout"
        },
        "direction": {
          "type": "string",
          "enum": [
            "row",
            "column"
          ]
        },
        "justify": {
          "type": "string"
        },
        "align": {
          "type": "string"
        }
      },
      "required": [
        "components",
        "direction",
        "id"
      ],
      "additionalProperties": false
    },
    "ImageProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "image"
        },
        "fieldName": {
          "type": "string"
        },
        "alt": {
          "type": "string"
        },
        "size": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "fieldName",
        "alt"
      ],
      "additionalProperties": false,
      "description": "MEDIA"
    },
    "CardLayoutProperties": {
      "type": "object",
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ComponentConfig"
          }
        },
        "id": {
          "type": "string",
          "const": "cardLayout"
        }
      },
      "required": [
        "components",
        "id"
      ],
      "additionalProperties": false
    },
    "TextProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "text"
        },
        "fieldName": {
          "type": "string"
        },
        "fontSize": {
          "type": "string",
          "enum": [
            "xs",
            "sm",
            "md",
            "lg",
            "xl"
          ]
        },
        "align": {
          "type": "string"
        },
        "format": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "UPPERCASE",
              "LOWERCASE",
              "CAPITALIZE",
              "REMOVE_UNDERSCORES"
            ]
          }
        }
      },
      "required": [
        "id",
        "fieldName",
        "fontSize"
      ],
      "additionalProperties": false
    },
    "LabeledTextProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "labeledText"
        },
        "fieldName": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "separator": {
          "type": "string",
          "const": ":"
        },
        "fontSize": {
          "type": "string",
          "enum": [
            "xs",
            "sm",
            "md",
            "lg",
            "xl"
          ]
        },
        "format": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "UPPERCASE",
              "LOWERCASE",
              "CAPITALIZE",
              "REMOVE_UNDERSCORES"
            ]
          }
        }
      },
      "required": [
        "id",
        "fieldName",
        "label",
        "separator",
        "fontSize"
      ],
      "additionalProperties": false
    },
    "ListProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "list"
        },
        "fieldName": {
          "type": "string"
        },
        "direction": {
          "type": "string",
          "enum": [
            "row",
            "column"
          ]
        },
        "as": {
          "type": "string",
          "const": "grid"
        },
        "gridSettings": {
          "type": "object",
          "properties": {
            "templateRows": {
              "type": "string"
            },
            "templateColumns": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "layout": {
          "$ref": "#/definitions/LayoutConfig"
        }
      },
      "required": [
        "id",
        "fieldName",
        "layout"
      ],
      "additionalProperties": false,
      "description": "ARRAYS used to display arrays"
    },
    "LinkProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "link"
        },
        "fieldName": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "labelFieldName": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "fieldName"
      ],
      "additionalProperties": false
    },
    "ConcatTextProperties": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "const": "concatText"
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "separator": {
          "type": "string"
        },
        "fontSize": {
          "type": "string",
          "enum": [
            "xs",
            "sm",
            "md",
            "lg",
            "xl"
          ]
        },
        "format": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "UPPERCASE",
              "LOWERCASE",
              "CAPITALIZE",
              "REMOVE_UNDERSCORES"
            ]
          }
        }
      },
      "required": [
        "id",
        "fields",
        "separator",
        "fontSize"
      ],
      "additionalProperties": false
    },
    "FormProperties": {
      "type": "object",
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ComponentConfig"
          }
        },
        "id": {
          "type": "string",
          "const": "form"
        },
        "fieldName": {
          "type": "string"
        },
        "formFields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "validation": {}
      },
      "required": [
        "components",
        "fieldName",
        "formFields",
        "id",
        "validation"
      ],
      "additionalProperties": false,
      "description": "FORM form wraps input components"
    },
    "GridLayoutProperties": {
      "type": "object",
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ComponentConfig"
          }
        },
        "id": {
          "type": "string",
          "const": "grid"
        },
        "gridSettings": {
          "type": "object",
          "properties": {
            "templateRows": {
              "type": "string"
            },
            "templateColumns": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "components",
        "gridSettings",
        "id"
      ],
      "additionalProperties": false,
      "description": "LAYOUTS used to layout data objects that are not arrays. Have child components."
    }
  }
}